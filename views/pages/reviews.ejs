<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>
    <%- include ('../partials/message') %>

        <h4 class="text-center" style="padding-bottom:5vh;padding-top:2vh">Reviews</h4>
        <div class="container" style="padding-bottom: 10vh;">
            <table class="table table-hover" >
                <thead>
                    <tr>
                        <th>Song name</th>
                        <th>Date added</th>
                        <th>Review</th>
                    </tr>
                </thead>
                <tbody>

        <% reviews.forEach(function(review) { %>
                    <tr>
                        <td><%= review.songname %></td>
                        <td><%= review.reviewdate %></td>
                        <td style="word-wrap:break-word"> <%= review.review %></td>
                    </tr>
        <% }); %>
                </tbody>
            </table>
        </div>
</main>

<%- include ('../partials/footer') %>